{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOn": [
                "build godot engine",
                "build rust cdylib",
            ]
        },
        {
            "label": "build godot engine",
            "type": "shell",
            "command": "pyenv",
            "args": [
                "exec",
                "scons",
                "use_llvm=yes",
                "linker=lld",
                "module_mono_enable=yes",
                "compiledb=yes",
                "dev_build=yes"
                // determein by host
                // , platfrom=linuxbsd ,
                // "arch=x86_64" ,
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "linux": {
                "options": {
                    "cwd": "/apt/godot"
                }
            },
            "windows": {
                "options": {
                    "cwd": "g:/ME/godot" // godot project's directory
                },
                "args": [
                    "exec",
                    "scons",
                    // "use_llvm=yes",
                    // "linker=lld",
                    "module_mono_enable=yes",
                    "compiledb=yes",
                    "dev_build=yes"
                ],
            },
            "promptOnClose": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "build rust cdylib",
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "args": [],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/extension/rust"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
        },
    ]
}